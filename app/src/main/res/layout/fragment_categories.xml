<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.esi.tdm.apetito.fragments.AllDishesFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tous les categories"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="gravity"
        android:fontFamily="@font/ralewaysemibold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/mGreen" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/dayMenu"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/lunch"
            android:scaleType="fitXY"
            android:id="@+id/dishImageList"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_3"
            android:layout_gravity="bottom"
            android:paddingLeft="6dp"
            android:text="Menu du Jour"
            android:textColor="@color/mWhite"
            android:textSize="24sp"
            android:fontFamily="@font/poppinsregular"/>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/categoriesListView"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:divider="@null"
        android:dividerHeight="0dp"></ListView>

</LinearLayout>
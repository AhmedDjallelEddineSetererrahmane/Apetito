<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context="com.esi.tdm.apetito.fragments.DrinksFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Les Boissons"
        android:textSize="16sp"
        android:id="@+id/CategoryDishesName"
        android:textColor="@android:color/black"
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="gravity"
        android:fontFamily="@font/ralewaysemibold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/mGreen" /><View
    android:layout_width="match_parent"
    android:layout_height="4dp"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dishesList"
        android:divider="@null"
        android:layout_margin="8dp"
        android:dividerHeight="10dp"/>
    <ProgressBar
        android:visibility="visible"
        android:id="@+id/progressBarDish"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.esi.tdm.apetito.fragments.DoBookingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dip"
            android:layout_marginBottom="30dip"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:text="Reserver Une Table"
                android:textAlignment="center"
                android:textColor="@color/mGreen"
                android:textSize="28dip"
                android:fontFamily="@font/ralewaysemibold" />
        </LinearLayout>

        <EditText
            android:id="@+id/nbPresson"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:background="@drawable/shape_5"
            android:hint="Nombre de presonne"
            android:inputType="number"
            android:paddingLeft="20dip"
            android:textColor="@color/logInPrimaryDark"
            android:textColorHint="#848282"
            android:textSize="23dip"
            android:fontFamily="@font/poppinsregular"/>

        <EditText
            android:id="@+id/reserveDate"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:background="@drawable/shape_5"
            android:hint="Choisir une date"
            android:inputType="text"
            android:paddingLeft="20dip"
            android:textColor="@color/logInPrimaryDark"
            android:textColorHint="#848282"
            android:textSize="23dip"
            android:editable="false"
            android:fontFamily="@font/poppinsregular"/>

        <EditText
            android:id="@+id/reservHour"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:background="@drawable/shape_5"
            android:hint="Choisir une heure"
            android:inputType="number"
            android:paddingLeft="20dip"
            android:textColor="@color/logInPrimaryDark"
            android:textColorHint="#848282"
            android:textSize="23dip"
            android:editable="false"
            android:fontFamily="@font/poppinsregular"
            />


        <Button
            android:id="@+id/resrvBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dip"
            android:background="@drawable/shape_6"
            android:padding="12dip"
            android:text="Reserver"
            android:textColor="@color/mWhite"
            android:textSize="20dip"
            android:textStyle="bold"
            android:fontFamily="@font/montserratlight"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/copyright"
                android:textAlignment="center"
                android:textColor="@color/mGreen"
                android:textSize="16dip"
                android:fontFamily="@font/ralewaysemibold"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>
